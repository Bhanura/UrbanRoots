<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/colorSurface">

    <!-- Header -->
    <TextView
        android:id="@+id/edit_profile_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_profile_header"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- Name -->
    <TextView
        android:id="@+id/name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name_label"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:paddingBottom="4dp" />
    <EditText
        android:id="@+id/name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_name"
        android:inputType="textPersonName"
        android:paddingBottom="12dp" />

    <!-- Email (Non-editable) -->
    <TextView
        android:id="@+id/email_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email_label"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:paddingBottom="4dp" />
    <TextView
        android:id="@+id/email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:textAppearance="?attr/textAppearanceBody1"
        android:paddingBottom="12dp" />

    <!-- Location -->
    <TextView
        android:id="@+id/location_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/location_label"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:paddingBottom="4dp" />
    <EditText
        android:id="@+id/location_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_location"
        android:inputType="text"
        android:paddingBottom="12dp" />

    <!-- Farmer ID -->
    <TextView
        android:id="@+id/farmer_id_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/farmer_id_label"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:paddingBottom="4dp" />
    <EditText
        android:id="@+id/farmer_id_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_farmer_id"
        android:inputType="text"
        android:paddingBottom="12dp" />

    <!-- Save Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/save_profile"
        android:layout_marginTop="16dp" />

    <!-- Progress Bar for Loading/Saving -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</LinearLayout>